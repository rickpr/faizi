<%= form_tag flood_path do %>

  <div class="field">
    <%= label_tag "Source Host" %><br>
    <%= number_field_tag :sourceHost, nil, in: 1..12 %>
  </div>
  <div class="field">
    <%= label_tag "Destination Host" %><br>
    <%= number_field_tag :destHost, nil, in: 1..12 %>
  </div>
  <div class="field">
    <%= label_tag "Number of Packets to Send" %><br>
    <%= number_field_tag :packetCount, nil, in: 1..1000 %>
  </div>
  <div class="actions">
    <%= submit_tag "Send", class: "btn btn-warning" %>
  </div>
<% end %>
