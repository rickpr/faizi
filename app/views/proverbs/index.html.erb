<h1>Listing proverbs</h1>

<table>
  <thead>
    <tr>
      <th>Quote</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proverbs.each do |proverb| %>
      <tr>
        <td><%= proverb.quote %></td>
        <td><%= proverb.author %></td>
        <td><%= link_to 'Show', proverb %></td>
        <td><%= link_to 'Edit', edit_proverb_path(proverb) %></td>
        <td><%= link_to 'Destroy', proverb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Proverb', new_proverb_path %>
