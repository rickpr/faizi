<h1>Add/Edit Users</h1>

<%= link_to 'New User' , new_user_path, class: "btn btn-primary" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Change name/Reset Password', edit_user_path(user), class: "badge" %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "badge fa fa-trash-o" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
